# Project Cobra Environment Variables

# Authentication
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/cobra?retryWrites=true&w=majority
DATABASE_URL=${MONGODB_URI}

# API Keys
OPENAI_API_KEY=sk-your-openai-key-here
SENDGRID_API_KEY=your-sendgrid-key-here

# Services
DISPUTE_ENGINE_URL=http://localhost:5000
CREDIT_PARSER_URL=http://localhost:5001

# Feature Flags
ENABLE_AI_DISPUTE_ENGINE=true
ENABLE_CREDIT_SIMULATOR=true
ENABLE_FCRA_COMPLIANCE=true

# Analytics
POSTHOG_API_KEY=your-posthog-key-here
SENTRY_DSN=your-sentry-dsn-here

# Security
SESSION_TIMEOUT_MINUTES=60
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_FREEZE_DAYS=7

# Deployment
NODE_ENV=development
PORT=3000
API_PORT=3001
